/* Light & Dark theme variables. User override (via data-theme) takes priority over system. */
:root {
  color-scheme: light dark;
  --surface-900: #f8f9fa;
  --surface-800: #e9ecef;
  --surface-700: #dee2e6;
  --surface-600: #ced4da;
  --surface-500: #adb5bd;
  --surface-200: rgba(33, 37, 41, 0.08);
  --surface-100: #212529;
  --surface-overlay: rgba(255, 255, 255, 0.85);
  --surface-overlay-strong: rgba(255, 255, 255, 0.95);
  --surface-overlay-muted: rgba(33, 37, 41, 0.05);
  --surface-card: rgba(255, 255, 255, 0.95);
  --surface-card-border: rgba(33, 37, 41, 0.1);
  --surface-card-emphasis: rgba(52, 58, 64, 0.15);
  --badge-bg: rgba(0, 123, 255, 0.1);
  --badge-color: #007bff;
  --pill-bg: rgba(33, 37, 41, 0.05);
  --pill-border: rgba(33, 37, 41, 0.1);
  --chip-bg: rgba(33, 37, 41, 0.08);
  --chip-border: rgba(33, 37, 41, 0.1);
  --text-primary: #212529;
  --text-muted: rgba(33, 37, 41, 0.7);
  --text-inverse: #f8f9fa;
  --accent-300: #6c757d;
  --accent-400: #495057;
  --accent-500: #343a40;
  --accent-600: #212529;
  --text-on-accent: #ffffff;
  --focus-ring: rgba(0, 123, 255, 0.4);
  --border-soft: rgba(33, 37, 41, 0.12);
  --shadow-card: 0 12px 25px rgba(0, 0, 0, 0.06);
  --shadow-soft: 0 18px 50px rgba(0, 0, 0, 0.08);
  --gradient-hero: radial-gradient(circle at 20% 20%, rgba(0, 123, 255, 0.08), transparent 55%),
    radial-gradient(circle at 80% 0, rgba(108, 117, 125, 0.08), transparent 50%),
    linear-gradient(140deg, #f8f9fa 25%, #e9ecef 100%);
  --hero-texture-color: rgba(33, 37, 41, 0.05);

  /* Alias to the simplified token set used by base.css */
  --bg: var(--surface-900);
  --surface: var(--surface-card);
  --text: var(--text-primary);
  --muted: var(--text-muted);
  --primary: var(--accent-400);
  --primary-ink: var(--text-on-accent);
  --border: var(--border-soft);
  --focus: var(--focus-ring);
}

html[data-theme='dark'] {
  color-scheme: dark;
  --surface-900: #212529;
  --surface-800: #343a40;
  --surface-700: #495057;
  --surface-600: #6c757d;
  --surface-500: #adb5bd;
  --surface-200: rgba(248, 249, 250, 0.08);
  --surface-100: #f8f9fa;
  --surface-overlay: rgba(33, 37, 41, 0.85);
  --surface-overlay-strong: rgba(33, 37, 41, 0.95);
  --surface-overlay-muted: rgba(52, 58, 64, 0.45);
  --surface-card: rgba(52, 58, 64, 0.85);
  --surface-card-border: rgba(248, 249, 250, 0.05);
  --surface-card-emphasis: rgba(73, 80, 87, 0.45);
  --badge-bg: rgba(0, 123, 255, 0.12);
  --badge-color: #66b2ff;
  --pill-bg: rgba(248, 249, 250, 0.05);
  --pill-border: rgba(248, 249, 250, 0.1);
  --chip-bg: rgba(52, 58, 64, 0.6);
  --chip-border: rgba(248, 249, 250, 0.06);
  --text-primary: #f8f9fa;
  --text-muted: rgba(248, 249, 250, 0.78);
  --text-inverse: #212529;
  --accent-300: #868e96;
  --accent-400: #6c757d;
  --accent-500: #495057;
  --accent-600: #343a40;
  --text-on-accent: #ffffff;
  --focus-ring: rgba(0, 123, 255, 0.6);
  --border-soft: rgba(248, 249, 250, 0.08);
  --shadow-card: 0 12px 25px rgba(0, 0, 0, 0.2);
  --shadow-soft: 0 18px 50px rgba(0, 0, 0, 0.25);
  --gradient-hero: radial-gradient(circle at 20% 20%, rgba(0, 123, 255, 0.15), transparent 60%),
    radial-gradient(circle at 80% 0, rgba(108, 117, 125, 0.15), transparent 55%),
    linear-gradient(140deg, #212529 35%, #343a40 100%);
  --hero-texture-color: rgba(248, 249, 250, 0.05);

  --bg: var(--surface-900);
  --surface: var(--surface-card);
  --text: var(--text-primary);
  --muted: var(--text-muted);
  --primary: var(--accent-400);
  --primary-ink: var(--text-on-accent);
  --border: var(--border-soft);
  --focus: var(--focus-ring);
}

html[data-theme='light'] {
  color-scheme: light;
}

@media (prefers-color-scheme: dark) {
  :root:not([data-theme]) {
    color-scheme: dark;
    --surface-900: #0b1220;
    --surface-800: #101a2c;
    --surface-700: #1c273a;
    --surface-600: #273246;
    --surface-500: #2f3b53;
    --surface-200: rgba(255, 255, 255, 0.08);
    --surface-100: #f3f6fc;
    --surface-overlay: rgba(11, 18, 32, 0.78);
    --surface-overlay-strong: rgba(11, 18, 32, 0.92);
    --surface-overlay-muted: rgba(15, 25, 40, 0.45);
    --surface-card: rgba(18, 26, 42, 0.85);
    --surface-card-border: rgba(255, 255, 255, 0.05);
    --surface-card-emphasis: rgba(11, 28, 58, 0.45);
    --badge-bg: rgba(92, 165, 255, 0.12);
    --badge-color: #a6cbff;
    --pill-bg: rgba(255, 255, 255, 0.05);
    --pill-border: rgba(255, 255, 255, 0.1);
    --chip-bg: rgba(15, 25, 40, 0.6);
    --chip-border: rgba(255, 255, 255, 0.06);
    --text-primary: #f5f8ff;
    --text-muted: rgba(245, 248, 255, 0.78);
    --text-inverse: #0b1220;
    --accent-300: #74bbff;
    --accent-400: #5ca5ff;
    --accent-500: #3d8aff;
    --accent-600: #2b6fcc;
    --text-on-accent: #06102a;
    --focus-ring: rgba(139, 196, 255, 0.6);
    --border-soft: rgba(255, 255, 255, 0.08);
    --shadow-card: 0 24px 60px rgba(8, 15, 35, 0.3);
    --shadow-soft: 0 30px 90px rgba(11, 17, 31, 0.38);
    --gradient-hero: radial-gradient(circle at 20% 20%, rgba(92, 165, 255, 0.32), transparent 60%),
      radial-gradient(circle at 80% 0, rgba(255, 120, 80, 0.24), transparent 55%),
      linear-gradient(140deg, #0b1220 35%, #111c2f 100%);
    --hero-texture-color: rgba(255, 255, 255, 0.08);

    --bg: var(--surface-900);
    --surface: var(--surface-card);
    --text: var(--text-primary);
    --muted: var(--text-muted);
    --primary: var(--accent-400);
    --primary-ink: var(--text-on-accent);
    --border: var(--border-soft);
    --focus: var(--focus-ring);
  }
}
